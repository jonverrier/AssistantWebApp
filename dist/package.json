{
    "name": "yard-talk-webapp",
    "private": true,
    "version": "0.0.1",
    "type": "commonjs",
    "scripts": {
        "start": "node server.js",
        "build-main": "tsc --build && npx esbuild src/index.tsx --sourcemap --outfile=dist/motif.min.js --bundle --minify && ncp dist/motif.pack.js public/assets/js/motif.min.js && ncp dist/motif.min.js.map public/assets/js/motif.min.js.map",
        "build": "tsc --build && npx esbuild src/index.tsx --sourcemap --outfile=dist/motif.pack.js --bundle && ncp dist/motif.pack.js public/assets/js/motif.pack.js && ncp dist/motif.pack.js.map public/assets/js/motif.pack.js.map",
        "install-local": "ncp ../Assistant/export/AssistantChatApiTypes.ts import/AssistantChatApiTypes.ts",
        "clean": "tsc --build --clean",
        "test": "mocha --debug-brk --exit --require ts-node/register --require test/setup.ts test/*.test.ts test/*.test.tsx",
        "test-mini": "mocha --debug-brk --exit --require ts-node/register test/setup.ts test/App.test.tsx",
        "cover": "tsc && nyc mocha --exit --require ts-node/register test/*test.ts"
    },
    "engines": {
        "node": "22.x"
    },
    "devDependencies": {
        "@fluentui/react-components": "^9.45.0",
        "@testing-library/react": "^16.3.0",
        "@types/expect": "^1.20.4",
        "@types/express": "^4.17.21",
        "@types/jsdom": "^21.1.7",
        "@types/mocha": "^10.0.10",
        "@types/node": "^20.11.0",
        "@types/react": "^18.2.55",
        "@types/react-dom": "^18.2.19",
        "@types/sinon": "^17.0.4",
        "axios": "^1.8.4",
        "axios-retry": "^4.5.0",
        "esbuild": "^0.25.2",
        "expect": "^29.7.0",
        "express": "^4.18.2",
        "jsdom": "^26.1.0",
        "mocha": "^11.1.0",
        "ncp": "^2.0.0",
        "prompt-repository": "file:../PromptRepository",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.22.0",
        "rimraf": "^6.0.1",
        "sinon": "^20.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.2.2"
    }
}
